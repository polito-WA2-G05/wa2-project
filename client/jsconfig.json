{
    "compilerOptions": {
      "baseUrl": ".",
        "paths": {
          "@components/*": ["src/components/*"],
          "@contexts/*": ["src/contexts/*"],
          "@hooks/*": ["src/hooks/*"],        
          "@views/*": ["src/views/*"],
          "@services/*": ["src/services/*"],
          "@utils/*": ["src/utils/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*.{js,jsx}"]
  }